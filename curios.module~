      'title' => t('View All Pending Records'),
      'description' => t('Can view records\' listing/details regardless their status. For validators and administrators.'),
      'restrict access' => TRUE,
    ),
    'curios create new records' => array(
      'title' => t('Create New Records'),
      'description' => t('Can create new records. The newly-created records will be the user\'s society code.'),
      'restrict access' => FALSE,
    ),
    'curios edit own records' => array(
      'title' => t('Edit Records'),
      'description' => t('Can edit cannot change record publication status or the maintainer of the record (initially the society of the creator) . Records after editting will be marked as \'pending\''),
      'restrict access' => TRUE,
    ),
    'curios validate own records' => array(
      'title' => t('Validate Own Records'),
      'description' => t('Can validate a record maintained by his/her society.'),
      'restrict access' => TRUE,
   ),   
