/**
 * Implements hook_views_api().
 */
function curios_views_api($module, $api) {
  if ($module == 'views' && $api == 'views_default') {
    return array('version' => 2);
  }
}

/**
 * Implements hook_ctools_plugin_api().
 */
function curios_ctools_plugin_api($module, $api) {
  if ($module == 'panels' && $api == 'layouts') {
    return array('version' => 1);
  }
  if ($module == 'page_manager' && $api == 'pages_default') {
    return array('version' => 1);
  }
}

/**
 * Implements hook_init.
 */
function curios_init() {
  // Temporary fix for exposed drop down filter.
  if (!isset($_GET['field_event_category_value'])) {
    $_GET['field_event_category_value'] = 'All';
  }
// add javascripts for map
  $osapikey = variable_get('curios_osmap_api_key');
  if (!empty(	$osapikey ))
    {   drupal_add_js('http://openspace.ordnancesurvey.co.uk/osmapapi/openspace.js?key='.$osapikey); 

	$config = curios_configuration();
	$map_settings = $config->getMapSettings();	
    	drupal_add_js(drupal_get_path('module', 'curios') . '/js/curios-map-view-handler.js');
    	drupal_add_js(array('curiosMap' => array( 'mapXName' => $map_settings['map_x_prop'], 
						  'mapYName' => $map_settings['map_y_prop'],
						  'defaultE' => variable_get('curios_default_easting'),
						  'defaultN' => variable_get('curios_default_northing'),
   						  'defaultZoom' => variable_get('curios_default_zoom_level')
						  	)), 'setting');
		
    } 
 // if this is not an OS map, use Leaflet
 else
 { 	$config = curios_configuration();
	$map_settings = $config->getMapSettings();	
	drupal_add_js('http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js');
	drupal_add_css('http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css', array('type' => 'external'));

//	drupal_add_js(drupal_get_path('module', 'curios') . '/js/curios-map-view-handler.js');
    	drupal_add_js(array('curiosMap' => array( 'mapXName' => $map_settings['map_x_prop'], 
						  'mapYName' => $map_settings['map_y_prop'],
						  'defaultE' => variable_get('curios_default_easting'),
						  'defaultN' => variable_get('curios_default_northing'),
   						  'defaultZoom' => variable_get('curios_default_zoom_level')
						  	)), 'setting');

 }
}

/**
 * Implements hook_premission.
 *
 * Defines permissions for the CURIOS module.
 */
function curios_permission() {
  return array(
    'curios manage repository' => array(
      'title' => t('View administrative tasks'),
      'description' => t('View links to administrative tasks/menu. Recommended to give it to everyone with either editing or validating permission.'),
